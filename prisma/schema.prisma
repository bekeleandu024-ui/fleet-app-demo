datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Driver {
  id                    String    @id @default(cuid())
  name                  String
  homeBase              String?
  active                Boolean   @default(true)
  phone                 String?
  email                 String?
  licenseNumber         String?
  licenseJurisdiction   String?
  licenseClass          String?
  licenseEndorsements   String[]  @default([])
  licenseExpiresAt      DateTime?
  medicalExpiresAt      DateTime?
  drugTestDate          DateTime?
  mvrDate               DateTime?
  payType               String?
  hourlyRate            Decimal?  @db.Decimal(10, 2)
  cpmRate               Decimal?  @db.Decimal(10, 2)
  deductionsProfileId   String?
  status                String?
  inactiveReason        String?
  inactiveAt            DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  trips                 Trip[]
}

model Unit {
  id       String  @id @default(cuid())
  code     String  @unique
  type     String?
  homeBase String?
  active   Boolean @default(true)
  trips    Trip[]
}

model Rate {
  id         String   @id @default(cuid())
  type       String?
  zone       String?
  fixedCPM   Decimal? @db.Decimal(10, 2)
  wageCPM    Decimal? @db.Decimal(10, 2)
  addOnsCPM  Decimal? @db.Decimal(10, 2)
  rollingCPM Decimal? @db.Decimal(10, 2)
}

model Order {
  id             String   @id @default(cuid())
  customer       String
  origin         String
  destination    String
  puWindowStart  DateTime?
  puWindowEnd    DateTime?
  delWindowStart DateTime?
  delWindowEnd   DateTime?
  requiredTruck  String?
  notes          String?
  createdAt      DateTime @default(now())
  trips          Trip[]
}

model Trip {
  id          String   @id @default(cuid())
  orderId     String?
  order       Order?   @relation(fields: [orderId], references: [id])
  driverId    String?
  driver      Driver?  @relation(fields: [driverId], references: [id])
  unitId      String?
  unit        Unit?    @relation(fields: [unitId], references: [id])
  miles       Decimal? @db.Decimal(10, 2)
  revenue     Decimal? @db.Decimal(12, 2)
  fixedCPM    Decimal? @db.Decimal(10, 2)
  wageCPM     Decimal? @db.Decimal(10, 2)
  addOnsCPM   Decimal? @db.Decimal(10, 2)
  rollingCPM  Decimal? @db.Decimal(10, 2)
  totalCPM    Decimal? @db.Decimal(10, 2)
  totalCost   Decimal? @db.Decimal(12, 2)
  profit      Decimal? @db.Decimal(12, 2)
  marginPct   Decimal? @db.Decimal(5, 2)
  createdAt   DateTime @default(now())
}
